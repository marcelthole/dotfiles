# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 5
}

order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "battery 0"
order += "load"
order += "tztime local"

wireless _first_ {
  format_up = "%essid"
  format_down = "W: down"
}

battery 0 {
  format = "%status %percentage %remaining"
  status_chr = "âš¡ CHR"
  status_bat = "ðŸ”‹ BAT"
  status_full = "â˜» FULL"
  path = "/sys/class/power_supply/BAT%d/uevent"
  low_threshold = 10

}

tztime local {
  format = "%d.%m.%Y %H:%M:%S"
  timezone = "Europe/Berlin"
  on_click 1 = "exec yad --no-buttons --geometry=-$X+0-$Y+20 --show-weeks --class \"popup\" --calendar --close-on-unfocus"
}

load {
  format = "%1min"
}

disk "/" {
  format = "/ %avail"
}
disk "/home" {
  format = "/home %avail"
  low_threshold = "2147483648" # 2GB
  format_below_threshold = "Warning: %percentage_avail (%avail)"
  threshold_type = "bytes_avail"
  on_click 1 = "exec nemo /home"
}
